<Window x:Class="TestApp.CharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="CharacterWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="615*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="81*"/>
            <RowDefinition Height="296*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="23*"/>
        </Grid.RowDefinitions>
        <Button Name="Back" Click="Back_Click" Grid.Row="0" Grid.Column="0" Background="Transparent" BorderBrush="Transparent"></Button>
        <Button Name="Confirm" Click="Confirm_Click" Grid.Row="2" Grid.Column="2" Background="Transparent" BorderBrush="Transparent"></Button>

    </Grid>
    <Window.Background>
        <ImageBrush ImageSource="Resources/NaamScherm.png" Stretch="Fill"></ImageBrush>
    </Window.Background>
</Window>
