<Window x:Class="game_7_8.Level1Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:game_7_8"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="MainWindow" Height="1080" Width="1920">
    <Grid>
        <Canvas Name="GameCanvas" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" Background="LightBlue">
            <!-- Deur -->
            <Rectangle x:Name="Door" Width="40" Height="40" Fill="Green" Canvas.Left="10" Canvas.Top="10"/>

            <!-- Persoon (speler) -->
            <Rectangle Name="Player" Width="40" Height="40" Fill="Purple" Canvas.Left="110" Canvas.Top="360"/>

            <!-- Platforms -->
            <Rectangle Name="Platform4" Width="120" Height="20" Fill="Brown" Canvas.Left="10" Canvas.Top="60" Tag="Platform"/>
            <Rectangle Name="Platform3" Width="120" Height="20" Fill="Brown" Canvas.Left="150" Canvas.Top="200" Tag="Platform"/>
            <Rectangle Name="Platform1" Width="120" Height="20" Fill="Brown" Canvas.Left="50" Canvas.Top="400" Tag="Platform"/>
            <Rectangle Name="Platform2" Width="120" Height="20" Fill="Brown" Canvas.Left="250" Canvas.Top="300" Tag="Platform"/>

            <!-- Score -->
            <TextBlock x:Name="ScoreText" Text="Score: 0" FontSize="16" Canvas.Right="10" Canvas.Top="10"/>
        </Canvas>
    </Grid>
</Window>
